better_cd(){
  builtin cd "$@" 2> /dev/null && return 0

  # fallback to autojump if cd fails
  new_path="$(autojump $@)"
  if [ -n "$new_path" ]
    then builtin cd "$new_path"
    else echo cannot cd to "$@"
  fi
}

httpheader(){
    curl -L -s -D - $1 -o /dev/null
}

function finder() { find . -iname "*$1*" }
alias f='finder'
alias cd='better_cd'
