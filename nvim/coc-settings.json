{
    "coc.preferences.colorSupport": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.floatActions": true,
    "coc.preferences.hoverTarget": "float",

    "git.addGBlameToBufferVar": true,

    "suggest.enablePreview": true,
    "suggest.floatEnable": true,
    "snippets.ultisnips.enable": true,
    "snippets.loadFromExtensions": true,
    "suggest.numberSelect": false,

    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.virtualText": false,
    "diagnostic.messageTarget":"float",
    "diagnostic.checkCurrentLine": true,

    "codeLens.enable": true,
    "signature.target": "float",

    "workspace.workspaceFolderCheckCwd": false,
    "tsserver.npm":"/opt/homebrew/bin/npm",
    "tsserver.tsdk":"/opt/homebrew/lib/node_modules/typescript/lib",
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript"],

    "html.autoClosingTags": false,
    "html.completion.attributeDefaultValue":"empty",

    "go.goplsOptions": {
        "staticcheck": true
    },

    "list.source.grep.command": "ag",

    "languageserver": { 
        "golangci-lint-languageserver": {
            "command": "golangci-lint-langserver",
            "filetypes": ["go"],
            "initializationOptions": {
                "command": ["golangci-lint", "run", "--enable-all", "--disable", "lll", "--out-format", "json"]
            }
        }
    },
    "diagnostic-languageserver.filetypes": {
        "php": "phpcs",
        "javascript": "eslint",
        "vue": "eslint",
        "tuescrypt": "eslint"
    },
    "diagnostic-languageserver.formatFiletypes": {
    }
}
